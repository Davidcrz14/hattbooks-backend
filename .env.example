# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=5000

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_URI=mongodb://localhost:27017/hattbooks
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# ============================================
# Auth0 Configuration (Optional - for social login)
# ============================================
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=https://api.yourdomain.com
AUTH0_ISSUER=https://your-domain.auth0.com/
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# ============================================
# CORS Configuration
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# JWT Secrets (Local Authentication)
# IMPORTANT: Use strong, random strings in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# ============================================
JWT_SECRET=uno-por-aca
JWT_REFRESH_SECRET=uno-por-aca-tambien

# ============================================
# External APIs
# ============================================
OPEN_LIBRARY_API_URL=https://openlibrary.org
